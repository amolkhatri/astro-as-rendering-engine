---
import { getCollection } from 'astro:content';

const slides = await getCollection('slides');
const sortedSlides = slides.sort((a, b) => a.data.order - b.data.order);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>// ASTRO.PRESENTATION</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="scanlines"></div>
    <div class="presentation">
      <aside class="sidebar">
        <div class="sidebar-header">
          <div class="terminal-title">┌──[ SYSTEM://ASTRO ]──┐</div>
          <h1>> ASTRO</h1>
          <span class="subtitle">// presentation.mdx</span>
        </div>
        <nav class="topics-nav">
          {sortedSlides.map((slide, idx) => (
            <a 
              href={`#slide-${idx + 1}`} 
              class="topic-btn"
              data-slide={idx + 1}
            >
              <span class="topic-icon">{slide.data.icon || '>'}</span>
              <span class="topic-title">{slide.data.title}</span>
              <span class="topic-arrow">_</span>
            </a>
          ))}
        </nav>
        <div class="sidebar-footer">
          <div class="terminal-footer">└─────────────────────┘</div>
          <span class="made-with">astro@5.x + qwik + mdx</span>
        </div>
      </aside>

      <main class="content">
        {sortedSlides.map(async (slide, idx) => {
          const { Content } = await slide.render();
          return (
            <section class="slide" id={`slide-${idx + 1}`}>
              <div class="slide-number">[{String(idx + 1).padStart(2, '0')}/{String(sortedSlides.length).padStart(2, '0')}]</div>
              <article class="slide-content">
                <Content />
              </article>
            </section>
          );
        })}
        
        <footer class="content-footer">
          <div class="pagination">
            {sortedSlides.map((_, idx) => (
              <a href={`#slide-${idx + 1}`} class="page-dot" data-slide={idx + 1}>
                <span class="sr-only">Slide {idx + 1}</span>
              </a>
            ))}
          </div>
          <div class="nav-hint">
            <kbd>scroll</kbd> or <kbd>click</kbd> to navigate
          </div>
        </footer>
      </main>
    </div>

    <script>
      // Intersection Observer for active slide tracking
      const slides = document.querySelectorAll('.slide');
      const navLinks = document.querySelectorAll('.topic-btn');
      const pageDots = document.querySelectorAll('.page-dot');

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const slideNum = entry.target.id.replace('slide-', '');
            
            // Update nav links
            navLinks.forEach(link => {
              link.classList.remove('active');
              if (link.dataset.slide === slideNum) {
                link.classList.add('active');
              }
            });

            // Update page dots
            pageDots.forEach(dot => {
              dot.classList.remove('active');
              if (dot.dataset.slide === slideNum) {
                dot.classList.add('active');
              }
            });
          }
        });
      }, { threshold: 0.5 });

      slides.forEach(slide => observer.observe(slide));

      // Smooth scroll for nav clicks
      document.querySelectorAll('a[href^="#slide-"]').forEach(anchor => {
        anchor.addEventListener('click', (e) => {
          e.preventDefault();
          const target = document.querySelector(anchor.getAttribute('href'));
          target?.scrollIntoView({ behavior: 'smooth' });
        });
      });
    </script>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  :root {
    --bg-primary: #0a0a0a;
    --bg-secondary: #050505;
    --bg-terminal: #000000;
    --bg-code: #0d1117;
    --accent: #00ff41;
    --accent-dim: #00ff4130;
    --accent-glow: 0 0 10px rgba(0, 255, 65, 0.4), 0 0 20px rgba(0, 255, 65, 0.2);
    --text-primary: #00ff41;
    --text-secondary: #00cc33;
    --text-dim: #007722;
    --text-muted: #004411;
    --border: #00ff4125;
    --sidebar-width: 300px;
    --font-mono: 'Fira Code', 'JetBrains Mono', monospace;
  }

  html {
    scroll-behavior: smooth;
    scroll-snap-type: y mandatory;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: var(--font-mono);
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
  }

  /* Scanlines */
  .scanlines {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 1000;
    background: repeating-linear-gradient(
      0deg,
      transparent 0px,
      transparent 1px,
      rgba(0, 0, 0, 0.1) 1px,
      rgba(0, 0, 0, 0.1) 2px
    );
    opacity: 0.4;
  }

  /* Presentation Layout */
  .presentation {
    display: flex;
    min-height: 100vh;
  }

  /* Sidebar */
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: var(--sidebar-width);
    height: 100vh;
    background: var(--bg-terminal);
    border-right: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    z-index: 100;
  }

  .sidebar-header {
    padding: 1.5rem 1rem;
    border-bottom: 1px solid var(--border);
  }

  .terminal-title {
    font-size: 0.65rem;
    color: var(--text-dim);
    letter-spacing: 0.05em;
  }

  .sidebar-header h1 {
    margin: 0.5rem 0 0.25rem;
    font-size: 1.25rem;
    color: var(--accent);
    text-shadow: var(--accent-glow);
    font-weight: 600;
  }

  .subtitle {
    font-size: 0.7rem;
    color: var(--text-dim);
  }

  .topics-nav {
    flex: 1;
    padding: 0.5rem;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .topic-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.8rem;
    border: 1px solid transparent;
    transition: all 0.15s ease;
  }

  .topic-btn::before {
    content: '$';
    color: var(--text-dim);
    transition: all 0.15s;
  }

  .topic-btn:hover {
    background: var(--accent-dim);
    border-color: var(--border);
    color: var(--accent);
  }

  .topic-btn:hover::before {
    content: '>';
    color: var(--accent);
  }

  .topic-btn.active {
    background: var(--accent-dim);
    border-color: var(--accent);
    color: var(--accent);
    text-shadow: var(--accent-glow);
  }

  .topic-btn.active::before {
    content: '█';
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  .topic-icon {
    width: 20px;
    text-align: center;
    flex-shrink: 0;
  }

  .topic-title {
    flex: 1;
  }

  .topic-arrow {
    opacity: 0;
    transition: opacity 0.15s;
  }

  .topic-btn:hover .topic-arrow,
  .topic-btn.active .topic-arrow {
    opacity: 1;
  }

  .sidebar-footer {
    padding: 1rem;
    border-top: 1px solid var(--border);
  }

  .terminal-footer {
    font-size: 0.65rem;
    color: var(--text-dim);
    margin-bottom: 0.5rem;
  }

  .made-with {
    font-size: 0.65rem;
    color: var(--text-muted);
  }

  .made-with::before { content: '/* '; }
  .made-with::after { content: ' */'; }

  /* Content Area */
  .content {
    margin-left: var(--sidebar-width);
    flex: 1;
    min-height: 100vh;
  }

  .slide {
    min-height: 100vh;
    padding: 3rem 4rem;
    scroll-snap-align: start;
    position: relative;
    border-bottom: 1px dashed var(--border);
  }

  .slide-number {
    position: absolute;
    top: 1.5rem;
    right: 2rem;
    font-size: 0.75rem;
    color: var(--text-dim);
  }

  .slide-content {
    max-width: 900px;
  }

  /* MDX Content Styles */
  .slide-content h1 {
    font-size: 2rem;
    color: var(--accent);
    text-shadow: var(--accent-glow);
    margin: 0 0 0.5rem;
    border-bottom: 1px solid var(--border);
    padding-bottom: 0.5rem;
  }

  .slide-content h1::before {
    content: '# ';
    color: var(--text-dim);
  }

  .slide-content h2 {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin: 0 0 2rem;
    font-weight: 400;
  }

  .slide-content h2::before {
    content: '## ';
    color: var(--text-dim);
  }

  .slide-content h3 {
    font-size: 1rem;
    color: var(--accent);
    margin: 2rem 0 1rem;
  }

  .slide-content p {
    color: var(--text-secondary);
    margin: 1rem 0;
    font-size: 0.9rem;
    line-height: 1.8;
  }

  .slide-content strong {
    color: var(--accent);
    font-weight: 500;
  }

  .slide-content a {
    color: var(--accent);
    text-decoration: underline;
  }

  .slide-content ul,
  .slide-content ol {
    padding-left: 1.5rem;
    margin: 1rem 0;
  }

  .slide-content li {
    color: var(--text-secondary);
    margin: 0.5rem 0;
    font-size: 0.9rem;
  }

  .slide-content li::marker {
    color: var(--text-dim);
  }

  /* Code Blocks */
  .slide-content pre {
    background: var(--bg-code);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 1.25rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    position: relative;
  }

  .slide-content pre::before {
    content: '// code';
    position: absolute;
    top: 0;
    right: 0;
    font-size: 0.65rem;
    color: var(--text-dim);
    padding: 0.25rem 0.5rem;
    background: var(--bg-terminal);
    border-left: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
  }

  .slide-content code {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  .slide-content p code,
  .slide-content li code {
    background: var(--bg-code);
    padding: 0.15rem 0.4rem;
    border: 1px solid var(--border);
    font-size: 0.85em;
  }

  /* Tables */
  .slide-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.85rem;
  }

  .slide-content th,
  .slide-content td {
    border: 1px solid var(--border);
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .slide-content th {
    background: var(--bg-code);
    color: var(--accent);
    font-weight: 500;
  }

  .slide-content td {
    color: var(--text-secondary);
  }

  /* Blockquotes */
  .slide-content blockquote {
    border-left: 3px solid var(--accent);
    margin: 1.5rem 0;
    padding: 0.75rem 1rem;
    background: var(--accent-dim);
  }

  .slide-content blockquote p {
    margin: 0;
  }

  /* Interactive Demo Styles */
  .interactive-demo {
    background: var(--bg-code);
    border: 1px solid var(--border);
    padding: 1.25rem;
    margin: 1.5rem 0;
    border-radius: 4px;
  }

  .demo-label {
    font-size: 0.75rem;
    color: var(--text-dim);
    margin-bottom: 1rem;
  }

  .demo-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .demo-btn {
    background: var(--bg-terminal);
    border: 1px solid var(--accent);
    color: var(--accent);
    padding: 0.5rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.15s;
  }

  .demo-btn:hover {
    background: var(--accent-dim);
    text-shadow: var(--accent-glow);
  }

  .demo-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .demo-value {
    font-size: 1.1rem;
    color: var(--accent);
    min-width: 100px;
    text-align: center;
  }

  .demo-toggle {
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    color: var(--text-secondary);
    padding: 0.75rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.15s;
  }

  .demo-toggle:hover {
    border-color: var(--accent);
  }

  .toggle-icon {
    font-size: 1.25rem;
  }

  .typewriter-output {
    flex: 1;
    font-size: 1rem;
    color: var(--accent);
    min-width: 200px;
  }

  .cursor {
    animation: blink 0.7s step-end infinite;
  }

  .signal-input {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    flex-wrap: wrap;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .signal-input input {
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    color: var(--accent);
    padding: 0.25rem 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    width: 120px;
  }

  .signal-input input:focus {
    outline: none;
    border-color: var(--accent);
  }

  .signal-output {
    color: var(--text-secondary);
  }

  .output-label {
    color: var(--text-dim);
  }

  .highlight {
    color: var(--accent);
    text-shadow: var(--accent-glow);
  }

  /* Footer */
  .content-footer {
    position: fixed;
    bottom: 0;
    right: 0;
    left: var(--sidebar-width);
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: linear-gradient(transparent, var(--bg-primary));
    z-index: 50;
  }

  .pagination {
    display: flex;
    gap: 0.35rem;
  }

  .page-dot {
    width: 12px;
    height: 12px;
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    cursor: pointer;
    transition: all 0.15s;
    position: relative;
  }

  .page-dot::before {
    content: '';
    position: absolute;
    inset: 2px;
    background: transparent;
    transition: background 0.15s;
  }

  .page-dot:hover {
    border-color: var(--accent);
  }

  .page-dot.active {
    border-color: var(--accent);
  }

  .page-dot.active::before {
    background: var(--accent);
    animation: blink 1.5s step-end infinite;
  }

  .nav-hint {
    font-size: 0.7rem;
    color: var(--text-dim);
  }

  .nav-hint kbd {
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    padding: 0.15rem 0.4rem;
    color: var(--accent);
    font-size: 0.65rem;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: var(--bg-terminal);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--border);
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--accent);
  }

  ::selection {
    background: var(--accent);
    color: var(--bg-terminal);
  }

  /* Responsive */
  @media (max-width: 900px) {
    :root {
      --sidebar-width: 250px;
    }
    
    .slide {
      padding: 2rem;
    }
  }

  @media (max-width: 700px) {
    .sidebar {
      display: none;
    }

    .content {
      margin-left: 0;
    }

    .content-footer {
      left: 0;
    }
  }

  /* ========================================
     Traditional Server Animation Styles
     ======================================== */
  .trad-animation {
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .anim-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px dashed var(--border);
    flex-wrap: wrap;
    gap: 1rem;
  }

  .status {
    font-size: 0.8rem;
    color: var(--accent);
  }

  .controls {
    display: flex;
    gap: 0.5rem;
  }

  .ctrl-btn {
    background: var(--bg-code);
    border: 1px solid var(--border);
    color: var(--text-secondary);
    padding: 0.35rem 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    cursor: pointer;
    transition: all 0.15s;
  }

  .ctrl-btn:hover:not(:disabled) {
    border-color: var(--accent);
    color: var(--accent);
  }

  .ctrl-btn:disabled {
    opacity: 0.5;
  }

  /* Flow Layout */
  .anim-flow {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .flow-node {
    background: var(--bg-code);
    border: 1px solid var(--border);
    padding: 1rem;
    min-width: 140px;
    text-align: center;
    transition: all 0.3s;
    border-radius: 4px;
  }

  .flow-node.active {
    border-color: var(--accent);
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.15);
  }

  .node-emoji {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .node-name {
    font-size: 0.7rem;
    color: var(--text-dim);
    margin-bottom: 0.5rem;
    letter-spacing: 0.1em;
  }

  .node-detail {
    font-size: 0.75rem;
    color: var(--text-secondary);
    min-height: 1.5em;
  }

  .flow-arrow {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.3;
    transition: opacity 0.3s;
  }

  .flow-arrow.active {
    opacity: 1;
  }

  .arrow-line {
    width: 60px;
    height: 2px;
    background: var(--accent);
    position: relative;
  }

  .arrow-line::after {
    content: '→';
    position: absolute;
    right: -10px;
    top: -8px;
    color: var(--accent);
  }

  .payload {
    display: flex;
    gap: 0.25rem;
    font-size: 0.6rem;
    animation: pulse-payload 0.5s ease infinite;
  }

  @keyframes pulse-payload {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
  }

  .payload-html {
    color: var(--text-secondary);
    background: var(--bg-terminal);
    padding: 0.15rem 0.3rem;
    border: 1px solid var(--border);
  }

  .payload-plus {
    color: var(--text-dim);
  }

  .payload-js {
    color: #ff6b6b;
    background: rgba(255, 107, 107, 0.1);
    padding: 0.15rem 0.3rem;
    border: 1px solid rgba(255, 107, 107, 0.3);
  }

  /* Server Tasks */
  .server-tasks {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    text-align: left;
    font-size: 0.65rem;
  }

  .task {
    color: var(--text-muted);
    padding: 0.2rem 0.4rem;
    background: var(--bg-terminal);
    border-radius: 2px;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .task.done {
    color: var(--text-secondary);
    background: var(--accent-dim);
  }

  .task-icon {
    font-size: 0.8rem;
  }

  .size-warn {
    color: #ff6b6b;
    margin-left: auto;
    font-weight: 600;
  }

  /* Data Layer */
  .data-layer {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .data-source {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.65rem;
    color: var(--text-muted);
    padding: 0.3rem 0.5rem;
    background: var(--bg-code);
    border: 1px solid var(--border);
    border-radius: 2px;
    opacity: 0.4;
    transition: all 0.3s;
  }

  .data-source.active {
    opacity: 1;
    border-color: var(--accent);
    color: var(--text-secondary);
  }

  .src-icon {
    font-size: 0.9rem;
  }

  /* Problems Section */
  .problems-section {
    background: rgba(255, 107, 107, 0.05);
    border: 1px solid rgba(255, 107, 107, 0.2);
    padding: 1rem;
    margin-bottom: 1rem;
    border-radius: 4px;
  }

  .problems-title {
    font-size: 0.7rem;
    color: #ff6b6b;
    margin-bottom: 0.75rem;
    letter-spacing: 0.1em;
  }

  .problems-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.5rem;
  }

  .problem {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.7rem;
    color: var(--text-muted);
    padding: 0.5rem;
    background: var(--bg-terminal);
    border-radius: 2px;
    opacity: 0;
    transform: translateY(5px);
    transition: all 0.3s ease;
  }

  .problem.visible {
    opacity: 1;
    transform: translateY(0);
    color: #ff6b6b;
  }

  .prob-icon {
    font-size: 1rem;
