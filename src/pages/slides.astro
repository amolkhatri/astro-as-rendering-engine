    border-bottom: 1px dashed var(--border);
    flex-wrap: wrap;
    gap: 1rem;
  }

  .status-label {
    font-size: 0.8rem;
    color: var(--accent);
    font-weight: 500;
  }

  .controls {
    display: flex;
    gap: 0.5rem;
  }

