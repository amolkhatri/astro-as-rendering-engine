  .users-column {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .users-label {
    font-size: 0.65rem;
    color: var(--text-dim);
    letter-spacing: 0.1em;
    text-align: center;
    margin-bottom: 0.25rem;
  }

  .user-card {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--bg-code);
    border: 1px solid var(--border);
    border-radius: 4px;
    font-size: 0.7rem;
    opacity: 0.4;
    transition: all 0.3s;
  }

  .user-card.active {
    opacity: 1;
    border-color: var(--accent);
  }

  .user-icon {
    font-size: 1rem;
  }

  .user-name {
    color: var(--text-secondary);
  }

  .user-location {
    font-size: 0.6rem;
    color: var(--text-dim);
  }

  /* CDN Layer */
  .cdn-layer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.4;
    transition: all 0.3s;
  }

  .cdn-layer.active {
    opacity: 1;
  }

  .cdn-layer.problem .cdn-box {
    border-color: #ff6b6b;
    box-shadow: 0 0 20px rgba(255, 107, 107, 0.2);
  }

  .cdn-box {
    background: var(--bg-code);
    border: 2px solid var(--border);
    border-radius: 8px;
    padding: 1rem 1.5rem;
    text-align: center;
    transition: all 0.3s;
  }

  .cdn-layer.active .cdn-box {
    border-color: var(--accent);
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.15);
  }

  .cdn-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .cdn-label {
    font-size: 0.7rem;
    color: var(--text-dim);
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .cache-off {
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  .cache-building {
    font-size: 0.7rem;
    color: var(--accent);
    animation: pulse-text 0.5s ease infinite;
  }

  .cache-hit {
    font-size: 0.75rem;
    color: var(--accent);
    text-shadow: var(--accent-glow);
  }

  .cache-problem {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .cache-warn {
    font-size: 0.75rem;
    color: #ff6b6b;
  }

  .cache-detail {
    font-size: 0.65rem;
    color: #ff6b6b;
    opacity: 0.7;
  }

  .speed-badge {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    background: var(--accent-dim);
    border: 1px solid var(--accent);
    border-radius: 4px;
    font-size: 0.65rem;
    color: var(--accent);
  }

  .speed-icon {
    font-size: 0.8rem;
  }

  /* Server Column */
  .server-column {
    transition: all 0.3s;
  }

  .server-column.bypassed {
    opacity: 0.4;
  }

  .server-box {
    background: var(--bg-code);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 1rem;
    text-align: center;
  }

  .server-icon {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .server-label {
    font-size: 0.65rem;
    color: var(--text-dim);
    letter-spacing: 0.1em;
  }

  .server-bypassed-badge {
    margin-top: 0.5rem;
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  /* Dilemma + Solution Container */
  .dilemma-solution-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  /* Dilemma Section */
  .dilemma-section {
    background: rgba(255, 107, 107, 0.05);
    border: 1px solid rgba(255, 107, 107, 0.2);
    border-radius: 4px;
    padding: 1rem;
  }

  .dilemma-title {
    font-size: 0.7rem;
    color: #ff6b6b;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  .dilemma-content {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .lost-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--bg-terminal);
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .lost-icon {
    font-size: 1rem;
  }

  .lost-text {
    color: var(--text-secondary);
  }

  .lost-status {
    color: #ff6b6b;
    font-weight: 600;
    margin-left: 0.5rem;
  }

  /* Solution Section */
  .solution-section {
    background: rgba(255, 193, 7, 0.05);
    border: 1px solid rgba(255, 193, 7, 0.3);
    border-radius: 4px;
    padding: 1rem;
    text-align: center;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .solution-arrow-down {
    font-size: 1.5rem;
    color: #ffc107;
    margin-bottom: 0.5rem;
    animation: bounce 1s ease infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(5px); }
  }

  .solution-title {
    font-size: 0.7rem;
    color: #ffc107;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .solution-text {
    font-size: 0.8rem;
    color: #ffc107;
    margin-bottom: 1rem;
  }

  .js-explosion {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .js-bundle {
    padding: 0.75rem 1rem;
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    border-radius: 4px;
    text-align: center;
  }

  .bundle-label {
    display: block;
    font-size: 0.6rem;
    color: var(--text-dim);
    margin-bottom: 0.25rem;
  }

  .bundle-size {
    font-size: 1rem;
    color: #ff6b6b;
    font-weight: 600;
  }

  .js-bundle.expanded {
    opacity: 0;
    transform: scale(0.8);
    transition: all 0.3s;
  }

  .js-bundle.expanded.visible {
    opacity: 1;
    transform: scale(1);
    border-color: #ff6b6b;
    box-shadow: 0 0 20px rgba(255, 107, 107, 0.3);
  }

  .bundle-size.explode {
    font-size: 1.2rem;
    animation: explode 0.5s ease;
  }

  @keyframes explode {
    0% { transform: scale(1); }
    50% { transform: scale(1.3); }
    100% { transform: scale(1); }
  }

  .js-arrow {
    font-size: 1.5rem;
    color: #ffc107;
  }

  .added-js-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    text-align: left;
    max-width: 300px;
    margin: 0 auto;
  }

  .added-item {
    font-size: 0.7rem;
    color: #ff6b6b;
    padding: 0.25rem 0.5rem;
    background: rgba(255, 107, 107, 0.1);
    border-radius: 2px;
  }

  /* Final State */
  .final-state {
    background: var(--bg-code);
    border: 1px solid #ff6b6b;
    border-radius: 4px;
    padding: 1rem;
  }

  .final-title {
    font-size: 0.7rem;
    color: #ff6b6b;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .comparison-table {
    margin-bottom: 1rem;
  }

  .compare-row {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 0.5rem;
    padding: 0.4rem 0;
    font-size: 0.7rem;
    border-bottom: 1px dashed var(--border);
  }

  .compare-row.header {
    color: var(--text-dim);
    font-size: 0.65rem;
  }

  .compare-label {
    color: var(--text-secondary);
  }

  .compare-before, .compare-after {
    text-align: center;
  }

  .compare-before.bad {
    color: #ff6b6b;
  }

  .compare-after.good {
    color: var(--accent);
  }

  .compare-after.worse {
    color: #ff6b6b;
    font-weight: 600;
  }

  .final-verdict {
    text-align: center;
    font-size: 0.8rem;
    color: #ff6b6b;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border);
  }

  /* ========================================
     Solution Animation Styles
     ======================================== */
  .solution-anim {
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .sol-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px dashed var(--border);
    flex-wrap: wrap;
    gap: 1rem;
  }

  .sol-status {
    font-size: 0.8rem;
    color: var(--accent);
  }

  .sol-controls {
    display: flex;
    gap: 0.5rem;
  }

  .sol-btn {
    background: var(--bg-code);
    border: 1px solid var(--border);
    color: var(--text-secondary);
    padding: 0.35rem 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    cursor: pointer;
    transition: all 0.15s;
  }

  .sol-btn:hover:not(:disabled) {
    border-color: var(--accent);
    color: var(--accent);
  }

  .sol-btn:disabled {
    opacity: 0.5;
  }

  /* Problems Recap */
  .problems-recap {
    background: rgba(255, 107, 107, 0.05);
    border: 1px solid rgba(255, 107, 107, 0.2);
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .recap-title {
    font-size: 0.65rem;
    color: #ff6b6b;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  .recap-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .recap-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.75rem;
    background: var(--bg-terminal);
    border-radius: 4px;
    font-size: 0.7rem;
    color: #ff6b6b;
    transition: all 0.3s;
  }

  .recap-item.solved {
    text-decoration: line-through;
    opacity: 0.5;
  }

  .recap-icon {
    font-size: 0.9rem;
  }

  .solved-badge {
    color: var(--accent);
    font-weight: 600;
    margin-left: 0.5rem;
    text-decoration: none !important;
  }

  /* New Architecture */
  .new-arch {
    background: rgba(0, 255, 65, 0.05);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .arch-title {
    font-size: 0.65rem;
    color: var(--accent);
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .arch-flow {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .arch-node {
    background: var(--bg-code);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 0.75rem;
    min-width: 120px;
    text-align: center;
    opacity: 0.3;
    transition: all 0.3s;
  }

  .arch-node.active {
    opacity: 1;
    border-color: var(--accent);
  }

  .arch-node.perfect {
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.3);
  }

  .arch-icon {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .arch-label {
    font-size: 0.6rem;
    color: var(--text-dim);
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .arch-features {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .feature-item {
    font-size: 0.6rem;
    color: var(--text-muted);
    padding: 0.15rem 0.3rem;
    background: var(--bg-terminal);
    border-radius: 2px;
  }

  .feature-item.on {
    color: var(--accent);
    background: var(--accent-dim);
  }

  .arch-arrow {
    display: flex;
    align-items: center;
    padding: 0 0.5rem;
    opacity: 0.3;
    transition: opacity 0.3s;
  }

  .arch-arrow.active {
    opacity: 1;
  }

  .arch-arrow::before {
    content: '→';
    font-size: 1.25rem;
    color: var(--accent);
  }

  .arrow-content {
    margin-left: 0.25rem;
  }

  .html-only {
    font-size: 0.6rem;
    color: var(--accent);
    background: var(--accent-dim);
    padding: 0.15rem 0.4rem;
    border-radius: 2px;
  }

  .no-js-badge {
    font-size: 0.65rem;
    color: var(--accent);
    background: var(--accent-dim);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-weight: 600;
    text-shadow: var(--accent-glow);
    animation: glow-pulse 1s ease infinite;
  }

  @keyframes glow-pulse {
    0%, 100% { box-shadow: 0 0 5px rgba(0, 255, 65, 0.3); }
    50% { box-shadow: 0 0 15px rgba(0, 255, 65, 0.5); }
  }

  /* Islands Demo */
  .islands-demo {
    background: var(--bg-terminal);
    border: 1px dashed var(--border);
    border-radius: 4px;
    padding: 1rem;
    margin-top: 1rem;
  }

  .islands-title {
    font-size: 0.7rem;
    color: var(--accent);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .page-mock {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .mock-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    font-size: 0.7rem;
  }

  .mock-section.static {
    background: var(--bg-code);
    border: 1px solid var(--border);
    color: var(--text-secondary);
  }

  .mock-section.island {
    background: rgba(0, 255, 65, 0.1);
    border: 1px solid var(--accent);
    color: var(--accent);
    animation: island-glow 2s ease infinite;
  }

  @keyframes island-glow {
    0%, 100% { box-shadow: 0 0 5px rgba(0, 255, 65, 0.2); }
    50% { box-shadow: 0 0 15px rgba(0, 255, 65, 0.4); }
  }

  .section-label {
    font-size: 0.7rem;
  }

  .section-js {
    font-size: 0.6rem;
    opacity: 0.7;
  }

  .total-js {
    text-align: center;
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px dashed var(--border);
  }

  .js-amount {
    color: var(--accent);
    font-weight: 600;
    text-shadow: var(--accent-glow);
  }

  .old-amount {
    color: #ff6b6b;
    text-decoration: line-through;
    opacity: 0.6;
  }

  /* Final Comparison */
  .final-comparison {
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.05) 0%, rgba(0, 255, 65, 0.1) 100%);
    border: 1px solid var(--accent);
    border-radius: 4px;
    padding: 1rem;
    animation: fadeIn 0.5s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .comparison-title {
    font-size: 0.7rem;
    color: var(--accent);
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    text-align: center;
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .comp-col {
    padding: 0.75rem;
    border-radius: 4px;
  }

  .comp-col.old-way {
    background: rgba(255, 107, 107, 0.1);
    border: 1px solid rgba(255, 107, 107, 0.3);
  }

  .comp-col.new-way {
    background: var(--accent-dim);
    border: 1px solid var(--accent);
  }

  .col-header {
    font-size: 0.7rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed var(--border);
  }

  .old-way .col-header {
    color: #ff6b6b;
  }

  .new-way .col-header {
    color: var(--accent);
  }

  .col-item {
    font-size: 0.65rem;
    color: var(--text-secondary);
    padding: 0.25rem 0;
  }

  .col-item.good {
    color: var(--accent);
  }

  .magic-formula {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem;
    background: var(--bg-terminal);
    border-radius: 4px;
    text-align: center;
  }

  .formula-icon {
    font-size: 1.25rem;
  }

  .formula-text {
    font-size: 0.8rem;
    color: var(--accent);
    text-shadow: var(--accent-glow);
  }

