  .success {
    color: var(--accent);
    font-size: 0.7rem;
    text-shadow: var(--accent-glow);
  }

  /* Connection */
  .connection {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0 0.5rem;
  }

  .line {
    height: 2px;
    background: var(--border);
    position: relative;
    min-width: 80px;
    opacity: 0.3;
    transition: all 0.3s;
  }

  .line.active {
    background: var(--accent);
    opacity: 1;
    box-shadow: 0 0 10px rgba(14, 165, 233, 0.5);
  }

  .packet {
    position: absolute;
    top: -10px;
    font-size: 0.6rem;
    padding: 0.15rem 0.3rem;
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    opacity: 0;
    transition: all 0.3s;
  }

  .request-packet {
    left: 0;
    color: var(--text-secondary);
  }

  .response-packet {
    right: 0;
    color: var(--accent);
  }

  .line.active .packet {
    opacity: 1;
    border-color: var(--accent);
  }

  .request-line.active .request-packet {
    animation: move-right 1s ease infinite;
  }

  .response-line.active .response-packet {
    animation: move-left 1s ease infinite;
  }

  @keyframes move-right {
    0% { transform: translateX(0); }
    100% { transform: translateX(40px); }
  }

  @keyframes move-left {
    0% { transform: translateX(0); }
    100% { transform: translateX(-40px); }
  }

