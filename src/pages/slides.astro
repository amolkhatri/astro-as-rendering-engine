---
import { getCollection } from 'astro:content';

const slides = await getCollection('slides');
const sortedSlides = slides.sort((a, b) => a.data.order - b.data.order);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>// ASTRO.PRESENTATION</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="scanlines"></div>
    <div class="presentation">
      <button id="sidebar-toggle" class="sidebar-toggle" aria-label="Toggle Sidebar">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="9" y1="3" x2="9" y2="21"></line>
        </svg>
      </button>
      <aside class="sidebar">
        <div class="sidebar-header">
          <div class="terminal-title">PRESENTATION</div>
          <h1>ASTRO</h1>
          <span class="subtitle">Modern Rendering Engine</span>
        </div>
        <nav class="topics-nav">
          {sortedSlides.map((slide, idx) => (
            <div class="topic-group">
              <a 
                href={`#slide-${idx + 1}`} 
                class="topic-btn"
                data-slide={idx + 1}
              >
                <span class="topic-icon">{slide.data.icon || '‚Ä¢'}</span>
                <span class="topic-title">{slide.data.title}</span>
              </a>
              {slide.data.sections && slide.data.sections.length > 0 && (
                <div class="topic-sections">
                  {slide.data.sections.map((section) => (
                    <a 
                      href={`#slide-${idx + 1}-${section.id}`}
                      class="section-btn"
                      data-slide={idx + 1}
                      data-section={section.id}
                    >
                      <span class="section-icon">{section.icon || '¬∑'}</span>
                      <span class="section-title">{section.title}</span>
                    </a>
                  ))}
                </div>
              )}
            </div>
          ))}
        </nav>
        <div class="sidebar-footer">
          <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
            <span class="theme-toggle-label">Theme</span>
            <div class="theme-toggle-switch">
              <span class="theme-toggle-knob"></span>
            </div>
          </button>
          <span class="made-with">astro@5.x + qwik + mdx</span>
        </div>
      </aside>

      <main class="content">
        {sortedSlides.map(async (slide, idx) => {
          const { Content } = await slide.render();
          return (
            <section class="slide" id={`slide-${idx + 1}`}>
              <div class="slide-number">{String(idx + 1).padStart(2, '0')} / {String(sortedSlides.length).padStart(2, '0')}</div>
              <article class="slide-content">
                <Content />
              </article>
            </section>
          );
        })}
        
        <footer class="content-footer">
          <div class="pagination">
            {sortedSlides.map((_, idx) => (
              <a href={`#slide-${idx + 1}`} class="page-dot" data-slide={idx + 1}>
                <span class="sr-only">Slide {idx + 1}</span>
              </a>
            ))}
          </div>
          <div class="nav-hint">
            <kbd>scroll</kbd> or <kbd>click</kbd> to navigate
          </div>
        </footer>
      </main>
    </div>

    <script>
      // Intersection Observer for active slide tracking
      const slides = document.querySelectorAll('.slide');
      const navLinks = document.querySelectorAll('.topic-btn');
      const sectionLinks = document.querySelectorAll('.section-btn');
      const pageDots = document.querySelectorAll('.page-dot');

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const slideNum = entry.target.id.replace('slide-', '');
            
            // Update nav links
            navLinks.forEach(link => {
              link.classList.remove('active');
              if ((link as HTMLElement).dataset.slide === slideNum) {
                link.classList.add('active');
              }
            });

            // Update page dots
            pageDots.forEach(dot => {
              dot.classList.remove('active');
              if ((dot as HTMLElement).dataset.slide === slideNum) {
                dot.classList.add('active');
              }
            });
          }
        });
      }, { threshold: 0.5 });

      slides.forEach(slide => observer.observe(slide));

      // Section Observer for active section tracking
      const sections = document.querySelectorAll('.slide-section');
      const sectionObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const sectionId = entry.target.id;
            
            sectionLinks.forEach(link => {
              link.classList.remove('active');
              if ((link as HTMLElement).dataset.section === sectionId) {
                link.classList.add('active');
              }
            });
          }
        });
      }, { threshold: 0.3 });

      sections.forEach(section => sectionObserver.observe(section));

      // Smooth scroll for nav clicks (slides)
      document.querySelectorAll('a[href^="#slide-"]').forEach(anchor => {
        anchor.addEventListener('click', (e) => {
          e.preventDefault();
          const href = anchor.getAttribute('href');
          if (!href) return;
          
          // Check if it's a section link (contains a second dash after "slide-")
          const parts = href.replace('#slide-', '').split('-');
          if (parts.length > 1) {
            // Section link: #slide-1-intro -> scroll to #intro
            const sectionId = parts.slice(1).join('-');
            const target = document.getElementById(sectionId);
            target?.scrollIntoView({ behavior: 'smooth' });
          } else {
            // Slide link: #slide-1 -> scroll to slide
            const target = document.querySelector(href);
            target?.scrollIntoView({ behavior: 'smooth' });
          }
        });
      });

      // Sidebar Toggle
      const toggleBtn = document.getElementById('sidebar-toggle');
      const sidebar = document.querySelector('.sidebar');
      const content = document.querySelector('.content');
      
      toggleBtn?.addEventListener('click', () => {
        sidebar?.classList.toggle('hidden');
        content?.classList.toggle('full-width');
        
        // Optional: Save state to localStorage
        const isHidden = sidebar?.classList.contains('hidden');
        localStorage.setItem('sidebar-hidden', String(isHidden));
      });

      // Restore state
      if (localStorage.getItem('sidebar-hidden') === 'true') {
        sidebar?.classList.add('hidden');
        content?.classList.add('full-width');
      }

      // Theme Toggle
      const themeToggle = document.getElementById('theme-toggle');
      
      // Initialize theme from localStorage or system preference
      const initTheme = () => {
        const savedTheme = localStorage.getItem('slides-theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = savedTheme || (prefersDark ? 'dark' : 'light');
        
        if (theme === 'light') {
          document.documentElement.setAttribute('data-theme', 'light');
        }
      };
      
      initTheme();
      
      themeToggle?.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';
        
        if (newTheme === 'light') {
          document.documentElement.setAttribute('data-theme', 'light');
        } else {
          document.documentElement.removeAttribute('data-theme');
        }
        
        localStorage.setItem('slides-theme', newTheme);
      });
    </script>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  :root {
    /* Modern Dark Theme (Default) */
    --bg-primary: #0f172a;
    --bg-secondary: #1e293b;
    --bg-terminal: #020617;
    --bg-code: #1e293b;
    
    /* Vibrant Accent */
    --accent: #818cf8;
    --accent-dim: rgba(129, 140, 248, 0.15);
    --accent-glow: 0 0 20px rgba(129, 140, 248, 0.3);
    
    /* Text */
    --text-primary: #f8fafc;
    --text-secondary: #cbd5e1;
    --text-dim: #94a3b8;
    --text-muted: #64748b;
    --border: #334155;
    
    --sidebar-width: 300px;
    --font-mono: 'JetBrains Mono', 'Fira Code', monospace;
    --font-sans: 'Inter', system-ui, sans-serif;
  }

  /* Light Theme */
  [data-theme="light"] {
    --bg-primary: #f8fafc;
    --bg-secondary: #ffffff;
    --bg-terminal: #f1f5f9;
    --bg-code: #e2e8f0;
    
    /* Accent - deeper for light mode */
    --accent: #6366f1;
    --accent-dim: rgba(99, 102, 241, 0.1);
    --accent-glow: 0 0 20px rgba(99, 102, 241, 0.2);
    
    /* Text */
    --text-primary: #0f172a;
    --text-secondary: #334155;
    --text-dim: #64748b;
    --text-muted: #94a3b8;
    --border: #cbd5e1;
  }

  html {
    scroll-behavior: smooth;
    scroll-snap-type: y mandatory;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: var(--font-sans);
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
  }

  /* Scanlines removed */
  .scanlines {
    display: none;
  }

  /* Presentation Layout */
  .presentation {
    display: flex;
    min-height: 100vh;
  }

  /* Sidebar */
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: var(--sidebar-width);
    height: 100vh;
    background: var(--bg-terminal);
    border-right: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    z-index: 100;
    transition: transform 0.3s ease;
  }

  .sidebar.hidden {
    transform: translateX(-100%);
  }
  
  .sidebar-toggle {
    position: fixed;
    top: 1rem;
    left: 1rem;
    z-index: 200;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--text-secondary);
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sidebar-toggle:hover {
    color: var(--accent);
    border-color: var(--accent);
    background: var(--accent-dim);
  }

  /* Adjust header to account for toggle button */
  .sidebar-header {
    padding: 1.5rem 1rem;
    padding-top: 3.5rem;
    border-bottom: 1px solid var(--border);
  }

  .terminal-title {
    font-size: 0.65rem;
    color: var(--text-dim);
    letter-spacing: 0.05em;
  }

  .sidebar-header h1 {
    margin: 0.5rem 0 0.25rem;
    font-size: 1.25rem;
    color: var(--accent);
    text-shadow: var(--accent-glow);
    font-weight: 600;
  }

  .subtitle {
    font-size: 0.7rem;
    color: var(--text-dim);
  }

  .topics-nav {
    flex: 1;
    padding: 0.5rem;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .topic-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.8rem;
    border: 1px solid transparent;
    transition: all 0.15s ease;
  }

  .topic-btn::before {
    content: none;
  }

  .topic-btn:hover {
    background: var(--accent-dim);
    border-color: var(--border);
    color: var(--accent);
  }

  .topic-btn:hover::before {
    content: '>';
    color: var(--accent);
  }

  .topic-btn.active {
    background: var(--accent-dim);
    border-color: var(--accent);
    color: var(--accent);
    text-shadow: var(--accent-glow);
  }

  .topic-btn.active::before {
    content: '‚ñà';
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  .topic-icon {
    width: 20px;
    text-align: center;
    flex-shrink: 0;
  }

  .topic-title {
    flex: 1;
  }

  .topic-arrow {
    opacity: 0;
    transition: opacity 0.15s;
  }

  .topic-btn:hover .topic-arrow,
  .topic-btn.active .topic-arrow {
    opacity: 1;
  }

  .topic-group {
    display: flex;
    flex-direction: column;
  }

  .topic-sections {
    display: flex;
    flex-direction: column;
    margin-left: 1.5rem;
    border-left: 1px solid var(--border);
  }

  .section-btn {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 0.75rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.7rem;
    border: 1px solid transparent;
    transition: all 0.15s ease;
  }

  .section-btn:hover {
    background: var(--accent-dim);
    color: var(--accent);
  }

  .section-btn.active {
    background: rgba(0, 255, 170, 0.1);
    border-color: var(--accent);
    color: var(--accent);
  }

  .section-icon {
    width: 16px;
    text-align: center;
    flex-shrink: 0;
    font-size: 0.65rem;
  }

  .section-title {
    flex: 1;
  }

  .sidebar-footer {
    padding: 1rem;
    border-top: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0.75rem;
    background: var(--bg-code);
    border: 1px solid var(--border);
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .theme-toggle:hover {
    border-color: var(--accent);
    background: var(--accent-dim);
  }

  .theme-toggle-label {
    font-size: 0.7rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .theme-toggle-switch {
    position: relative;
    width: 44px;
    height: 24px;
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    border-radius: 12px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    padding: 0 3px;
  }

  .theme-toggle-switch::before {
    content: 'üåô';
    position: absolute;
    left: 4px;
    font-size: 0.7rem;
    opacity: 1;
    transition: opacity 0.2s ease;
  }

  .theme-toggle-switch::after {
    content: '‚òÄÔ∏è';
    position: absolute;
    right: 4px;
    font-size: 0.7rem;
    opacity: 0.4;
    transition: opacity 0.2s ease;
  }

  [data-theme="light"] .theme-toggle-switch::before {
    opacity: 0.4;
  }

  [data-theme="light"] .theme-toggle-switch::after {
    opacity: 1;
  }

  .theme-toggle-knob {
    width: 18px;
    height: 18px;
    background: linear-gradient(135deg, var(--accent) 0%, #a78bfa 100%);
    border-radius: 50%;
    box-shadow: 0 2px 8px rgba(129, 140, 248, 0.4);
    transition: transform 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    z-index: 1;
  }

  [data-theme="light"] .theme-toggle-knob {
    transform: translateX(20px);
  }

  .terminal-footer {
    font-size: 0.65rem;
    color: var(--text-dim);
    margin-bottom: 0.5rem;
  }

  .made-with {
    font-size: 0.65rem;
    color: var(--text-muted);
  }

  .made-with::before { content: '/* '; }
  .made-with::after { content: ' */'; }

  /* Content Area */
  .content {
    margin-left: var(--sidebar-width);
    flex: 1;
    min-height: 100vh;
    transition: margin-left 0.3s ease;
  }

  .content.full-width {
    margin-left: 0;
  }

  .slide {
    min-height: 100vh;
    padding: 4rem 5rem;
    scroll-snap-align: start;
    position: relative;
    border-bottom: 1px dashed var(--border);
  }

  .slide-number {
    position: absolute;
    top: 2rem;
    right: 3rem;
    font-size: 0.9rem;
    color: var(--text-dim);
  }

  .slide-content {
    width: 100%;
    max-width: 100%;
  }

  /* Slide Sections */
  .slide-section {
    padding: 2rem 0;
    border-bottom: 1px solid var(--border);
    margin-bottom: 2rem;
    scroll-margin-top: 2rem;
  }

  .slide-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }

  /* MDX Content Styles */
  .slide-content h1 {
    font-size: 3.5rem;
    color: var(--accent);
    text-shadow: var(--accent-glow);
    margin: 0 0 1rem;
    border-bottom: 1px solid var(--border);
    padding-bottom: 0.75rem;
    line-height: 1.2;
  }

  .slide-content h1::before {
    content: none;
  }

  .slide-content h2 {
    font-size: 2rem;
    color: var(--text-secondary);
    margin: 0 0 2.5rem;
    font-weight: 400;
    line-height: 1.3;
  }

  .slide-content h2::before {
    content: none;
  }

  .slide-content h3 {
    font-size: 1.5rem;
    color: var(--accent);
    margin: 2.5rem 0 1.25rem;
    line-height: 1.4;
  }

  .slide-content p {
    color: var(--text-secondary);
    margin: 1.25rem 0;
    font-size: 1.3rem;
    line-height: 1.9;
  }

  .slide-content strong {
    color: var(--accent);
    font-weight: 500;
    font-size: 1.35rem;
  }

  .slide-content a {
    color: var(--accent);
    text-decoration: underline;
    font-size: 1.3rem;
  }

  .slide-content ul,
  .slide-content ol {
    padding-left: 2rem;
    margin: 1.5rem 0;
  }

  .slide-content li {
    color: var(--text-secondary);
    margin: 0.75rem 0;
    font-size: 1.3rem;
    line-height: 1.8;
  }

  .slide-content li::marker {
    color: var(--text-dim);
  }

  /* Code Blocks */
  .slide-content pre {
    background: var(--bg-code);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 2rem;
    overflow-x: auto;
    margin: 2rem 0;
    position: relative;
  }

  .slide-content pre::before {
    content: none;
  }

  .slide-content code {
    font-family: var(--font-mono);
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .slide-content p code,
  .slide-content li code {
    background: var(--bg-code);
    padding: 0.25rem 0.6rem;
    border: 1px solid var(--border);
    font-size: 1.15em;
  }

  /* Tables */
  .slide-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 1.2rem;
  }

  .slide-content th,
  .slide-content td {
    border: 1px solid var(--border);
    padding: 1rem 1.5rem;
    text-align: left;
  }

  .slide-content th {
    background: var(--bg-code);
    color: var(--accent);
    font-weight: 500;
    font-size: 1.3rem;
  }

  .slide-content td {
    color: var(--text-secondary);
  }

  /* Blockquotes */
  .slide-content blockquote {
    border-left: 4px solid var(--accent);
    margin: 2rem 0;
    padding: 1.25rem 1.5rem;
    background: var(--accent-dim);
    font-size: 1.3rem;
  }

  .slide-content blockquote p {
    margin: 0;
    line-height: 1.8;
  }

  /* Interactive Demo Styles */
  .interactive-demo {
    background: var(--bg-code);
    border: 1px solid var(--border);
    padding: 2rem;
    margin: 2rem 0;
    border-radius: 4px;
  }

  .demo-label {
    font-size: 1rem;
    color: var(--text-dim);
    margin-bottom: 1.25rem;
  }

  .demo-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .demo-btn {
    background: var(--bg-terminal);
    border: 1px solid var(--accent);
    color: var(--accent);
    padding: 0.5rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.15s;
  }

  .demo-btn:hover {
    background: var(--accent-dim);
    text-shadow: var(--accent-glow);
  }

  .demo-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .demo-value {
    font-size: 1.1rem;
    color: var(--accent);
    min-width: 100px;
    text-align: center;
  }

  .demo-toggle {
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    color: var(--text-secondary);
    padding: 0.75rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.15s;
  }

  .demo-toggle:hover {
    border-color: var(--accent);
  }

  .toggle-icon {
    font-size: 1.25rem;
  }

  .typewriter-output {
    flex: 1;
    font-size: 1rem;
    color: var(--accent);
    min-width: 200px;
  }

  .cursor {
    animation: blink 0.7s step-end infinite;
  }

  .signal-input {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    flex-wrap: wrap;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .signal-input input {
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    color: var(--accent);
    padding: 0.25rem 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    width: 120px;
  }

  .signal-input input:focus {
    outline: none;
    border-color: var(--accent);
  }

  .signal-output {
    color: var(--text-secondary);
  }

  .output-label {
    color: var(--text-dim);
  }

  .highlight {
    color: var(--accent);
    text-shadow: var(--accent-glow);
  }

  /* Footer */
  .content-footer {
    position: fixed;
    bottom: 0;
    right: 0;
    left: var(--sidebar-width);
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: linear-gradient(transparent, var(--bg-primary));
