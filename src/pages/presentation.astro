---
import { Presentation } from '../components/q/Presentation';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Framework | Product Overview</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700&family=IBM+Plex+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Presentation client:load />
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  :root {
    /* Professional Dark Theme - Deep Navy */
    --bg-primary: #0a0f1a;
    --bg-secondary: #111827;
    --bg-tertiary: #1a2234;
    --bg-card: #151d2e;
    --bg-code: #0d1117;
    
    /* Brand Colors - Refined Warm Amber & Gold */
    --accent-primary: #d97706;
    --accent-secondary: #f59e0b;
    --accent-tertiary: #b45309;
    --accent-light: rgba(217, 119, 6, 0.12);
    --accent-gradient: linear-gradient(135deg, #d97706 0%, #f59e0b 50%, #fbbf24 100%);
    
    /* Complementary accent - cool slate for balance */
    --accent-cool: #64748b;
    --accent-cool-light: rgba(100, 116, 139, 0.15);
    
    /* Text Colors */
    --text-primary: #f1f5f9;
    --text-secondary: #94a3b8;
    --text-tertiary: #64748b;
    --text-inverse: #0a0f1a;
    
    /* Border & Shadow */
    --border-color: rgba(148, 163, 184, 0.12);
    --border-hover: rgba(148, 163, 184, 0.24);
    --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.4);
    --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.5);
    --shadow-lg: 0 16px 48px rgba(0, 0, 0, 0.6);
    --shadow-accent: 0 4px 24px rgba(217, 119, 6, 0.3);
    --shadow-glow: 0 0 60px rgba(217, 119, 6, 0.08);
    
    /* Layout */
    --sidebar-width: 300px;
    --radius-sm: 6px;
    --radius-md: 10px;
    --radius-lg: 14px;
    
    /* Typography */
    --font-sans: 'DM Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-mono: 'IBM Plex Mono', 'SF Mono', monospace;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-sans);
    background: var(--bg-primary);
    color: var(--text-primary);
    overflow: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Presentation Container */
  .presentation {
    display: flex;
    width: 100%;
    height: 100vh;
    background: var(--bg-primary);
    position: relative;
  }

  /* Sidebar Styles */
  .sidebar {
    width: var(--sidebar-width);
    min-width: var(--sidebar-width);
    height: 100vh;
    background: var(--bg-secondary);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .sidebar-header {
    padding: 1.75rem 1.5rem 1.5rem;
    border-bottom: 1px solid var(--border-color);
    position: relative;
    background: linear-gradient(180deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
  }

  .sidebar-header::before {
    content: none;
  }

  .logo {
    font-size: 1.5rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--accent-gradient);
    border-radius: var(--radius-md);
    color: var(--text-inverse);
    margin-bottom: 0.875rem;
    box-shadow: var(--shadow-accent);
    font-weight: 600;
  }

  .sidebar-header h1 {
    margin: 0 0 0.125rem 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  .sidebar-header h1::before {
    content: none;
  }

  .subtitle {
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
    display: block;
    margin-top: 0.375rem;
    font-weight: 500;
  }

  .subtitle::before {
    content: none;
  }

  .topics-nav {
    flex: 1;
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    overflow-y: auto;
  }

  .topic-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0.875rem;
    background: transparent;
    border: 1px solid transparent;
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    font-family: var(--font-sans);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.15s ease;
    text-align: left;
    position: relative;
    letter-spacing: 0;
  }

  .topic-btn::before {
    content: none;
  }

  .topic-btn:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-color);
    color: var(--text-primary);
  }

  .topic-btn.active {
    background: var(--accent-light);
    border-color: rgba(217, 119, 6, 0.25);
    color: var(--accent-secondary);
    font-weight: 600;
  }

  .topic-btn.active::before {
    content: none;
  }

  .topic-icon {
    font-size: 1rem;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    border: 1px solid var(--border-color);
    filter: none;
    transition: all 0.15s ease;
  }

  .topic-btn:hover .topic-icon {
    background: var(--bg-card);
    border-color: var(--border-hover);
  }

  .topic-btn.active .topic-icon {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    color: var(--text-inverse);
    filter: none;
    box-shadow: var(--shadow-accent);
  }

  .topic-title {
    flex: 1;
  }

  .topic-arrow {
    opacity: 0;
    transition: all 0.15s ease;
    color: var(--accent-secondary);
    font-size: 1rem;
    font-weight: 400;
    transform: translateX(-4px);
  }

  .topic-btn:hover .topic-arrow {
    opacity: 0.4;
    transform: translateX(0);
  }

  .topic-btn.active .topic-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .sidebar-footer {
    padding: 1rem 1.25rem;
    border-top: 1px solid var(--border-color);
    background: var(--bg-primary);
  }

  .sidebar-footer::before {
    content: none;
  }

  .made-with {
    font-size: 0.6875rem;
    color: var(--text-tertiary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .made-with::before,
  .made-with::after {
    content: none;
  }

  /* Content Area */
  .content {
    flex: 1;
    height: 100vh;
    overflow-y: auto;
    padding: 2.5rem 3.5rem;
    display: flex;
    flex-direction: column;
    transition: opacity 0.15s ease;
    position: relative;
    background: 
      radial-gradient(ellipse at 0% 0%, rgba(217, 119, 6, 0.06) 0%, transparent 40%),
      radial-gradient(ellipse at 100% 50%, rgba(100, 116, 139, 0.05) 0%, transparent 40%),
      radial-gradient(ellipse at 50% 100%, rgba(217, 119, 6, 0.03) 0%, transparent 40%),
      var(--bg-primary);
  }

  .content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border-color), transparent);
  }

  .content.fade-out {
    opacity: 0;
  }

  .content.fade-in {
    opacity: 1;
  }

  .slide {
    flex: 1;
    max-width: 880px;
  }

  .slide-header {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    margin-bottom: 1.75rem;
    padding-bottom: 1.75rem;
    border-bottom: 1px solid var(--border-color);
  }

  .slide-icon {
    font-size: 1.5rem;
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent-gradient);
    color: var(--text-inverse);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-accent);
    position: relative;
    flex-shrink: 0;
  }

  .slide-icon::before {
    content: none;
  }

  .slide-title {
    margin: 0;
    font-size: 1.75rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--text-primary);
    letter-spacing: -0.015em;
  }

  .slide-title::before {
    content: none;
  }

  .slide-description {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 680px;
    padding-left: 0;
    border-left: none;
  }

  .slide-description::before,
  .slide-description::after {
    content: none;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 0.875rem;
    margin-bottom: 2rem;
    font-family: var(--font-sans);
  }

  .feature-card {
    display: flex;
    gap: 0.875rem;
    padding: 1rem 1.125rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    transition: all 0.15s ease;
    animation: slideUp 0.35s ease backwards;
    animation-delay: var(--delay);
    position: relative;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .feature-card::before {
    content: none;
  }

  .feature-card:hover {
    border-color: var(--border-hover);
    background: var(--bg-tertiary);
    transform: translateY(-1px);
  }

  .feature-number {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 500;
    color: var(--accent-secondary);
    width: 26px;
    height: 26px;
    min-width: 26px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent-light);
    border: 1px solid rgba(217, 119, 6, 0.2);
    border-radius: var(--radius-sm);
    flex-shrink: 0;
    margin-top: 0.0625rem;
  }

  .feature-number::before,
  .feature-number::after {
    content: none;
  }

  .feature-text {
    margin: 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.55;
    padding-top: 0.125rem;
  }

  .feature-card:hover .feature-text {
    color: var(--text-primary);
  }

  /* Code Block */
  .code-block {
    background: var(--bg-code);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    overflow: hidden;
    position: relative;
    box-shadow: var(--shadow-md);
  }

  .code-block::before {
    content: none;
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.75rem 1rem;
    background: rgba(0, 0, 0, 0.4);
    border-bottom: 1px solid var(--border-color);
  }

  .code-dots {
    display: flex;
    gap: 0.375rem;
  }

  .code-dots span {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
  }

  .code-dots span:first-child {
    background: #ef4444;
  }

  .code-dots span:nth-child(2) {
    background: #f59e0b;
  }

  .code-dots span:nth-child(3) {
    background: #22c55e;
  }

  .code-label {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    text-transform: none;
    letter-spacing: 0;
    font-family: var(--font-mono);
    font-weight: 500;
  }

  .code-label::before {
    content: none;
  }

  .code-block pre {
    margin: 0;
    padding: 1.25rem;
    overflow-x: auto;
    position: relative;
  }

  .code-block code {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    line-height: 1.65;
    color: #cbd5e1;
    white-space: pre;
  }

  /* Content Footer */
  .content-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-color);
  }

  .pagination {
    display: flex;
    gap: 0.375rem;
  }

  .page-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    cursor: pointer;
    transition: all 0.15s ease;
    padding: 0;
    position: relative;
  }

  .page-dot::before {
    content: none;
  }

  .page-dot:hover {
    background: var(--accent-light);
    border-color: var(--accent-primary);
  }

  .page-dot.active {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px rgba(217, 119, 6, 0.2);
  }

  .nav-hint {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    font-family: var(--font-sans);
    font-weight: 500;
  }

  .nav-hint kbd {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.25rem 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 500;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    color: var(--text-secondary);
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--bg-tertiary);
    border-radius: 3px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--border-hover);
  }

  /* Selection */
  ::selection {
    background: rgba(217, 119, 6, 0.3);
    color: var(--text-primary);
  }

  /* Studies Grid */
  .studies-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-top: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .study-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--bg-card);
    padding: 0.875rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
    transition: all 0.15s ease;
  }
  
  .study-card:hover {
    transform: translateY(-2px);
    border-color: var(--border-hover);
    background: var(--bg-tertiary);
  }

  .study-card img {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
    border-radius: var(--radius-sm);
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
  }

  .study-card p {
    margin: 0.75rem 0 0 0;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-align: center;
  }
  
  .study-card:hover p {
    color: var(--text-primary);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    :root {
      --sidebar-width: 260px;
    }

    .content {
      padding: 2rem 2rem;
    }

    .slide-title {
      font-size: 1.5rem;
    }
    
    .slide-description {
      font-size: 0.9375rem;
    }
    
    .features-grid {
      grid-template-columns: 1fr;
    }
    
    .studies-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .presentation {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      min-width: 100%;
      height: auto;
      max-height: 35vh;
      border-right: none;
      border-bottom: 1px solid var(--border-color);
    }

    .content {
      height: 65vh;
      padding: 1.25rem;
    }
    
    .slide-header {
      flex-direction: column;
      gap: 0.875rem;
    }
    
    .slide-icon {
      width: 52px;
      height: 52px;
      font-size: 1.25rem;
    }
    
    .slide-title {
      font-size: 1.375rem;
    }
    
    .content-footer {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
  }
</style>

