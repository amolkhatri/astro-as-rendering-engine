---
import { Presentation } from '../components/q/Presentation';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Framework | Product Overview</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Presentation client:load />
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  :root {
    /* Professional Light Theme */
    --bg-primary: #fafbfc;
    --bg-secondary: #ffffff;
    --bg-tertiary: #f4f6f8;
    --bg-card: #ffffff;
    --bg-code: #1e293b;
    
    /* Brand Colors - Sophisticated Blue-Violet */
    --accent-primary: #6366f1;
    --accent-secondary: #818cf8;
    --accent-tertiary: #4f46e5;
    --accent-light: #eef2ff;
    --accent-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
    
    /* Text Colors */
    --text-primary: #1e293b;
    --text-secondary: #475569;
    --text-tertiary: #94a3b8;
    --text-inverse: #ffffff;
    
    /* Border & Shadow */
    --border-color: #e2e8f0;
    --border-hover: #cbd5e1;
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.04);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 12px 40px rgba(0, 0, 0, 0.08);
    --shadow-accent: 0 4px 20px rgba(99, 102, 241, 0.25);
    
    /* Layout */
    --sidebar-width: 320px;
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    
    /* Typography */
    --font-sans: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-mono: 'JetBrains Mono', 'Fira Code', monospace;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-sans);
    background: var(--bg-primary);
    color: var(--text-primary);
    overflow: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Presentation Container */
  .presentation {
    display: flex;
    width: 100%;
    height: 100vh;
    background: var(--bg-primary);
    position: relative;
  }

  /* Sidebar Styles */
  .sidebar {
    width: var(--sidebar-width);
    min-width: var(--sidebar-width);
    height: 100vh;
    background: var(--bg-secondary);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .sidebar-header {
    padding: 2rem 1.5rem 1.5rem;
    border-bottom: 1px solid var(--border-color);
    position: relative;
    background: var(--bg-secondary);
  }

  .sidebar-header::before {
    content: none;
  }

  .logo {
    font-size: 2rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--accent-gradient);
    border-radius: var(--radius-md);
    color: white;
    margin-bottom: 0.75rem;
    box-shadow: var(--shadow-accent);
  }

  .sidebar-header h1 {
    margin: 0 0 0.25rem 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .sidebar-header h1::before {
    content: none;
  }

  .subtitle {
    font-size: 0.875rem;
    text-transform: none;
    letter-spacing: 0;
    color: var(--text-tertiary);
    display: block;
    margin-top: 0.25rem;
    font-weight: 400;
  }

  .subtitle::before {
    content: none;
  }

  .topics-nav {
    flex: 1;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    overflow-y: auto;
  }

  .topic-btn {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    font-family: var(--font-sans);
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
    position: relative;
    letter-spacing: 0;
  }

  .topic-btn::before {
    content: none;
  }

  .topic-btn:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .topic-btn.active {
    background: var(--accent-light);
    color: var(--accent-primary);
    font-weight: 600;
  }

  .topic-btn.active::before {
    content: none;
  }

  .topic-icon {
    font-size: 1.125rem;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    filter: none;
    transition: all 0.2s ease;
  }

  .topic-btn:hover .topic-icon {
    background: var(--border-color);
  }

  .topic-btn.active .topic-icon {
    background: var(--accent-primary);
    color: white;
    filter: none;
  }

  .topic-title {
    flex: 1;
  }

  .topic-arrow {
    opacity: 0;
    transition: all 0.2s ease;
    color: var(--accent-primary);
    font-size: 1.25rem;
    font-weight: 300;
  }

  .topic-btn:hover .topic-arrow {
    opacity: 0.5;
  }

  .topic-btn.active .topic-arrow {
    opacity: 1;
  }

  .sidebar-footer {
    padding: 1.25rem 1.5rem;
    border-top: 1px solid var(--border-color);
    background: var(--bg-tertiary);
  }

  .sidebar-footer::before {
    content: none;
  }

  .made-with {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }

  .made-with::before,
  .made-with::after {
    content: none;
  }

  /* Content Area */
  .content {
    flex: 1;
    height: 100vh;
    overflow-y: auto;
    padding: 3rem 4rem;
    display: flex;
    flex-direction: column;
    transition: opacity 0.15s ease;
    position: relative;
    background: 
      radial-gradient(ellipse at 0% 0%, rgba(99, 102, 241, 0.04) 0%, transparent 50%),
      radial-gradient(ellipse at 100% 100%, rgba(168, 85, 247, 0.03) 0%, transparent 50%),
      var(--bg-primary);
  }

  .content::before {
    content: none;
  }

  .content.fade-out {
    opacity: 0;
  }

  .content.fade-in {
    opacity: 1;
  }

  .slide {
    flex: 1;
    max-width: 920px;
  }

  .slide-header {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
  }

  .slide-icon {
    font-size: 1.75rem;
    width: 72px;
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent-gradient);
    color: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-accent);
    position: relative;
  }

  .slide-icon::before {
    content: none;
  }

  .slide-title {
    margin: 0;
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.25;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .slide-title::before {
    content: none;
  }

  .slide-description {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--text-secondary);
    margin-bottom: 2.5rem;
    max-width: 720px;
    padding-left: 0;
    border-left: none;
  }

  .slide-description::before,
  .slide-description::after {
    content: none;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
    margin-bottom: 2.5rem;
    font-family: var(--font-sans);
  }

  .feature-card {
    display: flex;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
    animation: slideUp 0.4s ease backwards;
    animation-delay: var(--delay);
    position: relative;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .feature-card::before {
    content: none;
  }

  .feature-card:hover {
    border-color: var(--accent-secondary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .feature-number {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--text-inverse);
    width: 28px;
    height: 28px;
    min-width: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent-gradient);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .feature-number::before,
  .feature-number::after {
    content: none;
  }

  .feature-text {
    margin: 0;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    padding-top: 0.125rem;
  }

  .feature-card:hover .feature-text {
    color: var(--text-primary);
  }

  /* Code Block */
  .code-block {
    background: var(--bg-code);
    border: none;
    border-radius: var(--radius-lg);
    overflow: hidden;
    position: relative;
    box-shadow: var(--shadow-lg);
  }

  .code-block::before {
    content: none;
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.875rem 1.25rem;
    background: rgba(0, 0, 0, 0.3);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .code-dots {
    display: flex;
    gap: 0.5rem;
  }

  .code-dots span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
  }

  .code-dots span:first-child {
    background: #ff5f57;
  }

  .code-dots span:nth-child(2) {
    background: #febc2e;
  }

  .code-dots span:nth-child(3) {
    background: #28c840;
  }

  .code-label {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.5);
    text-transform: none;
    letter-spacing: 0;
    font-family: var(--font-mono);
    font-weight: 500;
  }

  .code-label::before {
    content: none;
  }

  .code-block pre {
    margin: 0;
    padding: 1.5rem;
    overflow-x: auto;
    position: relative;
  }

  .code-block code {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.7;
    color: #e2e8f0;
    white-space: pre;
  }

  /* Content Footer */
  .content-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
  }

  .pagination {
    display: flex;
    gap: 0.5rem;
  }

  .page-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--border-color);
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    padding: 0;
    position: relative;
  }

  .page-dot::before {
    content: none;
  }

  .page-dot:hover {
    background: var(--accent-secondary);
    transform: scale(1.2);
  }

  .page-dot.active {
    background: var(--accent-primary);
    transform: scale(1.3);
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.2);
  }

  .nav-hint {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-size: 0.8125rem;
    color: var(--text-tertiary);
    font-family: var(--font-sans);
    font-weight: 500;
  }

  .nav-hint kbd {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.375rem 0.625rem;
    font-family: var(--font-sans);
    font-size: 0.75rem;
    font-weight: 600;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    box-shadow: var(--shadow-sm);
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--border-hover);
  }

  /* Selection */
  ::selection {
    background: var(--accent-secondary);
    color: white;
  }

  /* Studies Grid */
  .studies-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-top: 1rem;
    margin-bottom: 2rem;
  }

  .study-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(30, 30, 30, 0.4);
    padding: 1rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.2s;
  }
  
  .study-card:hover {
    transform: translateY(-2px);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .study-card img {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
    border-radius: 8px;
    background: #000;
  }

  .study-card p {
    margin: 0.8rem 0 0 0;
    font-size: 0.9rem;
    font-weight: 500;
    color: #e0e0e0;
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    :root {
      --sidebar-width: 280px;
    }

    .content {
      padding: 2rem 2.5rem;
    }

    .slide-title {
      font-size: 1.625rem;
    }
    
    .features-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .presentation {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      min-width: 100%;
      height: auto;
      max-height: 35vh;
      border-right: none;
      border-bottom: 1px solid var(--border-color);
    }

    .content {
      height: 65vh;
      padding: 1.5rem;
    }
    
    .slide-header {
      flex-direction: column;
      gap: 1rem;
    }
    
    .slide-icon {
      width: 56px;
      height: 56px;
      font-size: 1.5rem;
    }
  }
</style>

