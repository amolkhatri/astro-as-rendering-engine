---
import { Presentation } from '../components/q/Presentation';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>// ASTRO.PRESENTATION</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="scanlines"></div>
    <div class="noise"></div>
    <Presentation client:load />
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  :root {
    --bg-primary: #0d0d0d;
    --bg-secondary: #0a0a0a;
    --bg-tertiary: #141414;
    --bg-terminal: #000000;
    --accent-primary: #00ff41;
    --accent-secondary: #00cc33;
    --accent-dim: #00ff4120;
    --accent-glow: 0 0 20px rgba(0, 255, 65, 0.3), 0 0 40px rgba(0, 255, 65, 0.1);
    --text-primary: #00ff41;
    --text-secondary: #00cc33;
    --text-dim: #007722;
    --text-comment: #00ff4160;
    --border-color: #00ff4130;
    --border-glow: #00ff4150;
    --sidebar-width: 340px;
    --font-mono: 'Fira Code', 'IBM Plex Mono', 'Courier New', monospace;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-mono);
    background: var(--bg-primary);
    color: var(--text-primary);
    overflow: hidden;
  }

  /* CRT Scanlines Effect */
  .scanlines {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1000;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.1) 0px,
      rgba(0, 0, 0, 0.1) 1px,
      transparent 1px,
      transparent 2px
    );
    opacity: 0.3;
  }

  /* Noise Effect */
  .noise {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 999;
    opacity: 0.02;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%' height='100%' filter='url(%23noise)'/%3E%3C/svg%3E");
  }

  /* Presentation Container */
  .presentation {
    display: flex;
    width: 100%;
    height: 100vh;
    background: 
      radial-gradient(ellipse at 0% 0%, rgba(0, 255, 65, 0.03) 0%, transparent 50%),
      radial-gradient(ellipse at 100% 100%, rgba(0, 255, 65, 0.02) 0%, transparent 50%),
      linear-gradient(180deg, #0a0a0a 0%, #0d0d0d 50%, #0a0a0a 100%);
    position: relative;
  }

  /* Sidebar Styles */
  .sidebar {
    width: var(--sidebar-width);
    min-width: var(--sidebar-width);
    height: 100vh;
    background: var(--bg-terminal);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .sidebar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--accent-primary), transparent);
    animation: scanline 4s linear infinite;
  }

  @keyframes scanline {
    0% { top: 0; opacity: 1; }
    100% { top: 100%; opacity: 0.3; }
  }

  .sidebar-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-color);
    position: relative;
    background: var(--bg-secondary);
  }

  .sidebar-header::before {
    content: '┌──[ SYSTEM://ASTRO ]──────────────────┐';
    position: absolute;
    top: 0.5rem;
    left: 0.75rem;
    font-size: 0.65rem;
    color: var(--text-dim);
    letter-spacing: 0.05em;
  }

  .logo {
    font-size: 1.5rem;
    display: none;
  }

  .sidebar-header h1 {
    margin: 1.5rem 0 0.25rem 0;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--accent-primary);
    text-shadow: var(--accent-glow);
    letter-spacing: 0.1em;
  }

  .sidebar-header h1::before {
    content: '> ';
    color: var(--text-dim);
  }

  .subtitle {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--text-dim);
    display: block;
    margin-top: 0.25rem;
  }

  .subtitle::before {
    content: '// ';
  }

  .topics-nav {
    flex: 1;
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    overflow-y: auto;
  }

  .topic-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    background: transparent;
    border: 1px solid transparent;
    border-radius: 0;
    color: var(--text-secondary);
    font-family: var(--font-mono);
    font-size: 0.8rem;
    font-weight: 400;
    cursor: pointer;
    transition: all 0.15s ease;
    text-align: left;
    position: relative;
    letter-spacing: 0.02em;
  }

  .topic-btn::before {
    content: '$';
    color: var(--text-dim);
    margin-right: 0.25rem;
    transition: all 0.15s ease;
  }

  .topic-btn:hover {
    background: var(--accent-dim);
    color: var(--accent-primary);
    border-color: var(--border-color);
  }

  .topic-btn:hover::before {
    content: '>';
    color: var(--accent-primary);
  }

  .topic-btn.active {
    background: var(--accent-dim);
    color: var(--accent-primary);
    border-color: var(--accent-primary);
    text-shadow: var(--accent-glow);
  }

  .topic-btn.active::before {
    content: '█';
    color: var(--accent-primary);
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  .topic-icon {
    font-size: 1rem;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    filter: grayscale(100%) brightness(1.5);
  }

  .topic-btn.active .topic-icon,
  .topic-btn:hover .topic-icon {
    filter: none;
  }

  .topic-title {
    flex: 1;
  }

  .topic-arrow {
    opacity: 0;
    transition: all 0.15s ease;
    color: var(--accent-primary);
    font-family: var(--font-mono);
  }

  .topic-btn:hover .topic-arrow,
  .topic-btn.active .topic-arrow {
    opacity: 1;
  }

  .sidebar-footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--border-color);
    background: var(--bg-secondary);
  }

  .sidebar-footer::before {
    content: '└──────────────────────────────────────┘';
    display: block;
    font-size: 0.65rem;
    color: var(--text-dim);
    margin-bottom: 0.5rem;
    letter-spacing: 0.05em;
  }

  .made-with {
    font-size: 0.65rem;
    color: var(--text-dim);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    letter-spacing: 0.05em;
  }

  .made-with::before {
    content: '/* ';
  }

  .made-with::after {
    content: ' */';
  }

  /* Content Area */
  .content {
    flex: 1;
    height: 100vh;
    overflow-y: auto;
    padding: 2.5rem 3.5rem;
    display: flex;
    flex-direction: column;
    transition: opacity 0.1s ease;
    position: relative;
  }

  .content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      var(--accent-primary) 20%, 
      var(--accent-primary) 80%, 
      transparent 100%
    );
    opacity: 0.5;
  }

  .content.fade-out {
    opacity: 0;
  }

  .content.fade-in {
    opacity: 1;
  }

  .slide {
    flex: 1;
    max-width: 1000px;
  }

  .slide-header {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px dashed var(--border-color);
  }

  .slide-icon {
    font-size: 2.5rem;
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-terminal);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    position: relative;
  }

  .slide-icon::before {
    content: '';
    position: absolute;
    inset: -1px;
    border: 1px solid var(--accent-primary);
    border-radius: 4px;
    opacity: 0.3;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.02); }
  }

  .slide-title {
    margin: 0;
    font-size: 1.75rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--accent-primary);
    text-shadow: var(--accent-glow);
    letter-spacing: 0.02em;
  }

  .slide-title::before {
    content: '## ';
    color: var(--text-dim);
    font-weight: 400;
  }

  .slide-description {
    font-size: 0.9rem;
    line-height: 1.9;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 850px;
    padding-left: 1rem;
    border-left: 2px solid var(--border-color);
  }

  .slide-description::before {
    content: '/**\A * ';
    white-space: pre;
    color: var(--text-dim);
    display: block;
    margin-bottom: 0.5rem;
    margin-left: -1rem;
  }

  .slide-description::after {
    content: '\A */';
    white-space: pre;
    color: var(--text-dim);
    display: block;
    margin-top: 0.5rem;
    margin-left: -1rem;
  }

  /* Features Grid */
  .features-grid {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-family: var(--font-mono);
  }

  .feature-card {
    display: flex;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--bg-terminal);
    border: 1px solid var(--border-color);
    border-radius: 0;
    transition: all 0.2s ease;
    animation: typeIn 0.3s ease backwards;
    animation-delay: var(--delay);
    position: relative;
  }

  @keyframes typeIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .feature-card::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: var(--accent-primary);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .feature-card:hover {
    border-color: var(--accent-primary);
    background: var(--accent-dim);
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-number {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-dim);
    min-width: 36px;
  }

  .feature-number::before {
    content: '[';
  }

  .feature-number::after {
    content: ']';
  }

  .feature-text {
    margin: 0;
    font-size: 0.85rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .feature-card:hover .feature-text {
    color: var(--accent-primary);
  }

  /* Code Block */
  .code-block {
    background: var(--bg-terminal);
    border: 1px solid var(--border-color);
    border-radius: 0;
    overflow: hidden;
    position: relative;
  }

  .code-block::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: linear-gradient(180deg, rgba(0, 255, 65, 0.02) 0%, transparent 100%);
    pointer-events: none;
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1rem;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
  }

  .code-dots {
    display: flex;
    gap: 0.4rem;
  }

  .code-dots span {
    width: 10px;
    height: 10px;
    border-radius: 0;
    background: var(--text-dim);
  }

  .code-dots span:first-child {
    background: #ff5555;
  }

  .code-dots span:nth-child(2) {
    background: #ffff55;
  }

  .code-dots span:nth-child(3) {
    background: #55ff55;
  }

  .code-label {
    font-size: 0.7rem;
    color: var(--text-dim);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-family: var(--font-mono);
  }

  .code-label::before {
    content: '// ';
  }

  .code-block pre {
    margin: 0;
    padding: 1.25rem;
    overflow-x: auto;
    position: relative;
  }

  .code-block code {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    line-height: 1.8;
    color: var(--text-secondary);
    white-space: pre;
  }

  /* Content Footer */
  .content-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px dashed var(--border-color);
  }

  .pagination {
    display: flex;
    gap: 0.35rem;
  }

  .page-dot {
    width: 12px;
    height: 12px;
    border-radius: 0;
    background: var(--bg-terminal);
    border: 1px solid var(--border-color);
    cursor: pointer;
    transition: all 0.15s ease;
    padding: 0;
    position: relative;
  }

  .page-dot::before {
    content: '';
    position: absolute;
    inset: 2px;
    background: transparent;
    transition: background 0.15s ease;
  }

  .page-dot:hover {
    border-color: var(--accent-primary);
  }

  .page-dot:hover::before {
    background: var(--text-dim);
  }

  .page-dot.active {
    border-color: var(--accent-primary);
    box-shadow: var(--accent-glow);
  }

  .page-dot.active::before {
    background: var(--accent-primary);
    animation: blink 1.5s step-end infinite;
  }

  .nav-hint {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.7rem;
    color: var(--text-dim);
    font-family: var(--font-mono);
    letter-spacing: 0.05em;
  }

  .nav-hint kbd {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.25rem 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    background: var(--bg-terminal);
    border: 1px solid var(--border-color);
    border-radius: 0;
    color: var(--accent-primary);
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: var(--bg-terminal);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 0;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--accent-primary);
  }

  /* Selection */
  ::selection {
    background: var(--accent-primary);
    color: var(--bg-terminal);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    :root {
      --sidebar-width: 300px;
    }

    .content {
      padding: 2rem;
    }

    .slide-title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .presentation {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      min-width: 100%;
      height: auto;
      max-height: 40vh;
      border-right: none;
      border-bottom: 1px solid var(--border-color);
    }

    .content {
      height: 60vh;
    }
  }
</style>

